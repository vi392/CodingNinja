import java.util.Scanner;
public class Main {
	
	public static void main(String[] args) {
		// Write your code here
        
        Scanner s= new Scanner(System.in);
		int n=s.nextInt();
		
		int temp=n;
		String b="";
        
        if(n==0){
            System.out.println(n);
        }
        else{
		
		while(temp>0) {
			
			int remainder=temp%2;
			temp= temp/2;
			b=remainder+b;
		}
       
		long i=Long.parseLong(b);
		System.out.println(i);
        }

	}
}


